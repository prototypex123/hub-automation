<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/room2"
    android:background="@drawable/room_bg_dark"
    android:layout_width="220dp"
    android:layout_height="230dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/bulb_2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bulb_on"
        android:layout_marginTop="10dp"
        android:rotation="90"/>

    <ImageView
        android:id="@+id/ac_2"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
       android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ac_left_off" />
    <ImageView
        android:id="@+id/tube_2"
        android:layout_width="175dp"
        android:layout_marginBottom="-5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tubelight_horizontal_off"/>
    <ImageView
        android:id="@+id/fan_2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ac_2"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/three_blade_fan"
        />

</RelativeLayout>
