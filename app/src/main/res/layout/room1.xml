<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/room1"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:background="@drawable/room_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/tube_1"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginStart="-3dp"
        android:layout_centerVertical="true"
        android:src="@drawable/tubelight_vertical_on"
        android:adjustViewBounds="true" />
    <ImageView
        android:id="@+id/bulb_1"
        android:clickable="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bulb_on"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tube_1"
        android:rotation="90"/>
    <ImageView
        android:id="@+id/ac_1"
        android:clickable="true"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ac_bottom_on"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/fan_1"
        android:clickable="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/five_blade_fan" />
</RelativeLayout>
